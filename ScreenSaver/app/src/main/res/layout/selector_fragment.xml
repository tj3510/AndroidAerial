<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp" >

    <TextView
        android:id="@+id/current_dir_file_selector"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:textSize="15sp"
        android:text="some/file/path"
        android:layout_weight="0.1"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="20dp"/>



    <TextView
        android:id="@+id/no_files_file_selector"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15sp"
        android:text="No Files In Directory"
        android:visibility="gone"
        android:layout_weight="0.8"
        android:textColor="@color/primary_text"/>



    <TextView
        android:id="@+id/no_permision"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15sp"
        android:text="No Permission To Access"
        android:visibility="gone"
        android:layout_weight="0.8"
        android:textColor="@color/primary_text"/>
    <ScrollView
        android:id="@+id/content_scroll_view_file_selector"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/file_selecter_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:flexWrap="wrap"
            app:flexDirection="row"
            app:alignItems="stretch"
            app:alignContent="stretch">


        </com.google.android.flexbox.FlexboxLayout>

    </ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:layout_marginTop="20dp">



        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Back"
            android:textColor="@color/primary_text"/>


        <Button
            android:id="@+id/open_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Open"
            android:textColor="@color/primary_text"/>

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Confirm"
            android:textColor="@color/primary_text"/>

        <Button
            android:id="@+id/test_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Test"
            android:textColor="@color/primary_text"/>

        <Button
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Settings"
            android:textColor="@color/primary_text"/>

    </LinearLayout>

</LinearLayout>